import { Link, Center } from '@chakra-ui/react';
import { motion } from 'framer-motion';
import { navHover } from '../animation/animation';

function NavBar() {
  const MotionLink = motion(Link);

  const hover = { textDecoration: 'none' }

  return (
    <Center fontSize="1.2rem" mt="1rem">
      <MotionLink
        _hover={hover}
        pr="1rem"
        initial="initial"
        whileHover="hover"
        variants={navHover}
      >
        About Me
      </MotionLink>
      <MotionLink pr="1rem"
      >
        Projects
      </MotionLink>
      <MotionLink href="https://www.github.com/gadyerg" isExternal pr="1rem">
        Github
      </MotionLink>
      <MotionLink>Contact</MotionLink>
    </Center>
  );
}

export default NavBar;
